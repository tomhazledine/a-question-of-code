<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="/tomhazledine.app.css" rel="stylesheet">

        {% if custom_stylesheet %}
            <link href="{{custom_stylesheet | safe}}" rel="stylesheet">
        {% endif %}

        <link rel="profile" href="//gmpg.org/xfn/11">
        <title>{% if title and title != "Home" %}{{title}} | {% endif %}A Question of Code</title>
        <link rel="shortcut icon" href="/images/favicon.png">
        <link rel="shortcut icon" href="/images/favicon.ico">

        {% if custom_css %}
            <style type="text/css">{{custom_css | safe}}</style>
        {% endif %}

        <!-- Google+ -->
        <link href="//plus.google.com/111879829548102811838" rel="publisher" />

    </head>
    <body>
        
        {# <a class="skip-link screen-reader-text" href="#content">Skip to content</a> #}

        {% include "header.njk" %}

        {# {% if title !== "Home" %}
            <a href="/" class="home-link">Home</a>
        {% endif %} #}

    <div class="wrapper">

        {{ content | safe }}

    </div>
        
    </body>

    <footer>
        {# {% include "tweet-widget.njk" %} #}
        {% include "footer.njk" %}

        <script src="/tomhazledine.app.js"></script>
        {% for script in scripts %}
            <script src="/tomhazledine.{{script}}.js"></script>
        {% endfor %}

        {% include "analytics.njk" %}
    </footer>
</html>